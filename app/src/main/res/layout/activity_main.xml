<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cz.matyapav.valentinesday.MainActivity">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/background_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/colorBlack"/>
    <ImageView
        android:id="@+id/valentine"
        android:layout_width="200dp"
        android:layout_height="240dp"
        android:layout_marginLeft="50dp"
        android:layout_centerVertical="true"
        android:src="@drawable/valentine"/>
    <TextView
        android:id="@+id/currentBest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorWhite"
        android:textSize="25dp"
        android:text="Current Best: "
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/controls"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="100dp"
        android:orientation="vertical"
        android:visibility="invisible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:text="Heart hunt"
            />
        <Button
            android:id="@+id/startGameButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start"/>
        <Button
            android:id="@+id/aboutGameButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"/>
        <Button
            android:id="@+id/quitGameButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quit"/>
    </LinearLayout>




</RelativeLayout>
